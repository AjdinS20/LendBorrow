
@model IEnumerable<LendBorrow.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col pt-6">
            <h2 class="text-primary">Moji troškovi</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Dodaj novi trošak</a>
        </div>
    </div>
    <br />

    @if(Model.Count()>0)
    {
       <table class="table table-bordered table-striped" style="width:100%">
           <thead>
               <tr>
                   <th>
                       Trošak
                   </th>
                   <th>
                       Cijena
                   </th>
                   <th> Uredi </th>
               </tr>
           </thead>
           <tbody>
                @foreach(var expense in Model)
                {
                    <tr>
                        <td width="30%">@expense.ExpenseName</td>
                        <td width="30%">@expense.Amount</td>
                        <td width="40%">
                            <div class="w-100 btn-group">
                                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Uredi</a>
                                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Izbriši</a>
                            </div>
                            
                        </td>
                    </tr>
                }
            </tbody>
       </table>
       }
    else
        {
            <p>Trenutno nema kreiranih troškova</p>
        }

</div>
