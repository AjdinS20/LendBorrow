
@model IEnumerable<LendBorrow.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col pt-6">
            <h2 class="text-primary">Spisak posuđenih stvari</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Kreiraj</a>
        </div>
    </div>
    <br />

    @if(Model.Count()>0)
    {
       <table class="table table-bordered table-striped" style="width:100%">
           <thead>
               <tr>
                   <th>
                       Naziv
                   </th>
                   <th>
                       Uzeo
                   </th>
                   <th>
                       Posudio
                   </th>
               </tr>
           </thead>
           <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.Lender</td>
                    </tr>
                }
            </tbody>
       </table>
       }
    else
        {
            <p>Ništa nije posuđeno ili iznajmljeno</p>
        }

</div>
